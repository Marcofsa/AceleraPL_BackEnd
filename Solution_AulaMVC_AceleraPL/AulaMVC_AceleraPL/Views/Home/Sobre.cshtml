@{
}

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.FotoPerfil" class="img-fluid rounded-start" alt="@Model.Nome">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title titulo">@Model.Nome</h5>
        <p class="card-text">@Model.Sobre</p>
        <p class="card-text"><small class="text-body-secondary">Ultima Atualização 3 mins atrás</small></p>
      </div>
    </div>
  </div>
</div>